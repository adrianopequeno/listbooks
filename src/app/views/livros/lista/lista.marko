<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Livros</title>
</head>
<body>
  <h1>Listagem de livros</h1>
  <a href="http://localhost:3000/livros/form">
    <button>Cadastrar novo Livro</button>
  </a>

  <table id="livros">
    <tr>
      <td>ID</td>
      <td>Título</td>
      <td>Preço</td>
      <td>Editar</td>
      <td>Remover</td>
    </tr>
    <for (livro in input.livros)>
      <tr id="livro_${livro.id}">
        <td>${livro.id}</td>
        <td>${livro.titulo}</td>
        <td>${livro.preco}</td>
        <td><a href="/livros/form/${livro.id}">Editar</a></td>
        <td><a href="#" data-ref="${livro.id}" data-type="remocao">Remover</a></td>
      </tr>
    </for>
  </table>

  <script src="/estatico/js/remove-livro.js"></script>
</body>
</html>